{% extends 'base.html.twig' %}

{% block body %}
    <h1>Barkelou</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ barkelou.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ barkelou.montant }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if barkelou.date %}{{ barkelou.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ barkelou.type }}</td>
            </tr>
            <tr>
                <th>Evenement</th>
                <td>{{ barkelou.evenement }}</td>
            </tr>
            <tr>
                <th>Remarque</th>
                <td>{{ barkelou.remarque }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('barkelou_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('barkelou_edit', { 'id': barkelou.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
