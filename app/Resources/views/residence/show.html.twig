{% extends 'base.html.twig' %}

{% block body %}
    <h1>Résidence</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ residence.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ residence.nom }}</td>
            </tr>
            <tr>
                <th>Nombreappartement</th>
                <td>{{ residence.nombreAppartement }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <a class="btn btn-primary btn-sm" href="{{ path('residence_index') }}">Retour à la liste</a>
        <a class="btn btn-primary btn-sm" href="{{ path('residence_edit', { 'id': residence.id }) }}">Modifier</a>
    </ul>
    <ul>
        {{ form_start(delete_form) }}
        <input class="btn btn-outline-danger btn-sm" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </ul>
{% endblock %}
