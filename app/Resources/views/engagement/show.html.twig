{% extends 'base.html.twig' %}

{% block body %}
    <h1>Engagement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ engagement.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{% if engagement.debut %}{{ engagement.debut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{% if engagement.fin %}{{ engagement.fin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ engagement.montant }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('engagement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('engagement_edit', { 'id': engagement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
